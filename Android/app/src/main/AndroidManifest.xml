<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elorrieta.euskalmet">
    <!-- Permiso para poder el estado de la red en el teléfono -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Permiso para poder acceder a internet -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Permiso para poderusar la cámara del teléfono -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Euskalmet">
        <activity android:name=".Detalles_Municipios"></activity>
        <activity android:name=".Client_Insercion_Update" />
        <activity android:name=".ClientThread" />
        <activity android:name=".Listado_Favoritos" />
        <activity android:name=".Listado_Playas" />
        <activity android:name=".Top_Ranking" />
        <activity android:name=".Listado_Espacios_Naturales" />
        <activity android:name=".Listado_Municipios" />
        <activity android:name=".Menu_principal" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pantalla_Registro_Usuario" />
    </application>

</manifest>